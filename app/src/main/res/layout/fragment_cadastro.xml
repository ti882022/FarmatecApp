<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2E0D5"
    tools:context=".CadastroFragment">

    <FrameLayout
        android:id="@+id/cadastro_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeCadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        app:backgroundTint="@null"
        android:background="@drawable/botao_customizado"
        android:text="Confirmar"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="224dp"
        android:layout_height="194dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo_farm" />

    <RelativeLayout
        android:id="@+id/relativeCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="145dp">

        <EditText
            android:id="@+id/editTextNomeCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-3dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNomeCompleto"
            android:layout_alignStart="@+id/editTextNomeCompleto"
            android:layout_alignLeft="@+id/editTextNomeCompleto"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextNomeCompleto"
            android:layout_alignStart="@+id/editTextNomeCompleto"
            android:layout_alignLeft="@+id/editTextEmail"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="CPF"
            android:inputType="textPassword" />




    </RelativeLayout>
</RelativeLayout>